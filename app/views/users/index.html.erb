<!-- views/users/index.html.erb -->

<div class="container d-flex flex-column">
  <!-- Add User label and Logout button -->
  <div class="row mt-3">
    <div class="col d-flex justify-content-end align-items-center">
      <% if user_signed_in? %>
        <p class="text-muted me-3 align-self-center">User: <%= current_user.name %></p>
        <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-sm btn-danger" %>
      <% end %>
    </div>
  </div>

  <% @users.each do |user| %>
    <div class="row" style="margin-top: 5px;">
      <div class="col-md-2"><img class="img-fluid" src="<%= user.photo %>" style="border-style: solid;" /></div>
      <div class="col-md-10 align-self-center">
        <div class="row" style="border-style: solid;">
          <div class="col">
            <h3><%= user.name %></h3>
          </div>
          <div class="col align-self-end">
            <h5>Number of posts: <%= user.posts.count %></h5>
          </div>
          <div class="col align-self-center d-flex justify-content-end">
            <%= link_to "See user details", user_path(user), class: "btn btn-light border border-1" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Render the form outside the loop -->
  <%= render 'posts/form', post: @post %>
</div>
